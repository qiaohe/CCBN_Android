<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commodity_table"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:collapseColumns="2"
    android:stretchColumns="1" >

    <TableRow>

        <TextView
            android:id="@+id/commodity_currentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抢购价：69元" />

        <TextView
            android:id="@+id/commodity_originalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原价：300元" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/commodity_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余数量：100" />

        <TextView
            android:id="@+id/commodity_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="倒计时：" />
    </TableRow>

    <TableRow>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="选择" />

            <Spinner
                android:id="@+id/commodity_spinner"
                android:background="@drawable/sale"
                android:layout_width="wrap_content"
                android:layout_height="23dp" />
        </LinearLayout>
    </TableRow>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/commodity_btn01"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/commoditybtn01"
            android:text="售后电话" 
            android:textSize="20sp"/>

        <Button
            android:id="@+id/commodity_btn02"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/commoditybtn02"
            android:text="立即抢购"
            android:textSize="20sp"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</TableLayout>